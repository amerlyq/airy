#!/bin/bash
set -euo pipefail -o errtrace

# TODO: register filetypes/extensions somewhere separately
#   => use private directory for *.myext, etc registration to custom private scripts

# REF:(file ...)
#   https://www.ibm.com/developerworks/community/blogs/58e72888-6340-46ac-b488-d31aa4058e9c/entry/get_over_extensions_use_file_command_to_determine_file_types_in_linux?lang=en

onexit(){ exec pause $? "$_pargs" "${0##*/}" "${*:-: ${PWD/$HOME/\~}}"; }
# trap 'onexit' HUP INT QUIT TERM ERR
trap 'onexit' HUP QUIT TERM ERR  # INT -- better to return immediately

_list=0
_quiet=1
_pargs=-N

while getopts 'aAc:eEflnNqp' o
do case $o
in c) cd "$OPTARG"  # ALT: make -C "$PWD/build"
;; q) _quiet=$((!_quiet))
;; l) _list=$((!_list))
;; [aAeEnN]) _pargs=-$o
esac; OPTS+=$o; done; shift $((OPTIND-1))
((_quiet))||unset _quiet

path=${1:?}
shift
args=( "$@" )


by_name(){ local name=${1%/*}
case ${name:?}
in  [Mm]akefile*) make ${_quiet:+-s} -f "$1"
;;  CMakeLists.txt) sir
;;  *) return 10
esac; }


by_ext(){ local basename=${1%.*} ext=${1##*.}
case ${basename##*.}.$ext
in dot.gz|gv.gz) r.graphviz-view "$1"
;; *)
case ${ext:?}
in dot|gv) xdot "$1"  # r.graphviz-view
;; tpp) tpp "$1"
;; md|rst|org|wiki|tex) pandoc --standalone -o /tmp/pandoc.html "$1" && r.b /tmp/pandoc.html
;; adoc) asciidoctor -b html -o /tmp/pandoc.html "$1" && r.b /tmp/pandoc.html
  ## BAD: breaks special properties e.g. "[%collapsible]
  # asciidoctor -b docbook -o "/tmp/pandoc.docbook" "$1" &&
  # pandoc --standalone -f docbook -o /tmp/pandoc.html "/tmp/pandoc.docbook" && r.b /tmp/pandoc.html
;; ijs) /usr/lib/j8/bin/jconsole "$1"
;; jar) java -jar "$1"
# Launched w/o fork, because of poor cmd support: it opens new instance of
# XMind instead of adding file to opened
;; xmind) XMind -noSplash -- "$1"
# TODO: fix PATH to include this binary
;; nb) Mathematica -- "$1" &
;; *) return 11
esac; esac; }


by_mime(){ local mime
  mime=$(file --brief --mime-type "$1")
case ${mime:?}
in text/x-python) "$1"
;; application/x*) "$1"
;; text/x*) "$1"
;; video/*) ((_list)) && { mpv --playlist="${args[*]}"; return; } || mpv "$1"
;; *) return 12
esac; }


by_ext_post(){ local ext=${1##*.}
case ${ext:?}
in py) python "$1"
;;  *) [[ -x $1 ]] && "$1" || return 13
esac; }


ignore() { local ret=$?; ((ret==$1))||return $ret; }
chain(){ local path=${1:?}
  by_name "$path" && return || ignore 10
  by_ext "$path"  && return || ignore 11
  by_mime "$path" && return || ignore 12
  by_ext_post "$path" && return
}

chain "$path"
onexit  # success
