# vim:ft=sh

## git-annex
alias ga='git annex'

alias gA='ga add'
alias gA!='ga add --force'
alias gA.='ga add .'

alias gam='ga metadata'

alias gas='ga sync'
alias gac='ga sync --content'

alias gag.='ga get .'
alias gay.='ga copy .'  #  --to usbdrive

alias gau='ga unlock'
alias gau.='ga unlock .'

alias gal='ga lock'
alias gal.='ga lock .'

alias gaf='ga fix'  # fix symlinks
alias gafu='ga find --unlocked'
alias gaiF='ga fsck'
alias gaiW='ga whereis'
alias gaiU='ga unused'
