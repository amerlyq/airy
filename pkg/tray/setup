#!/bin/bash -e
# tags: xorg
THEME_ALLOWED='dark|light'
source ~/.shell/func.d/cfgsetup

### LINKS ###
dst=~/.config/stalonetrayrc
linkcp -c stalonetrayrc "$dst"

[[ $MAIN_DPI ]] || MAIN_DPI=$(r.xorg -d 2>/dev/null||echo 96)
iw=$(( ${MAIN_DPI:?} * 9/72 + 2 ))
sed -ri '
  /^(icon_size).*/s//\1 '$iw'/
' "$dst"
