#!/bin/bash

source ~/.shenv
if [ $? -eq 1 ]; then exit 1; fi

ROOT=~/.bin/setX.d
CMD="$1"
shift

while [ ! -z "$CMD" ]; do
  LETT=${CMD:0:1}
  CMD=${CMD:1}
  case "$LETT" in
    a) $ROOT/audio      $@   ;;
    d) $ROOT/display    $@   ;;
    k) $ROOT/keylayout  $@   ;;
    l) $ROOT/laptop-power $@ ;;
    t) $ROOT/touchpad   $@   ;;
    w) $ROOT/wallpaper  "$@" ;;
  esac
done

# Mint:
#   sudo mdmsetup     | login screen
#   cinnamon-settings | other sets
