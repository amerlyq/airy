#!/bin/bash

all_git() { # $1 - git command
    for rp in ~/aura/*; do
        if [ -d "$rp/.git" ]; then
            cd "$rp"
            echo -en "----------------$rp\n"
            git $1
        fi
    done
}

# В качестве основы можно использовать строку из zsh -- в которой мы получаем символы
# А потом выводить как таблицу из названий реп и их статусов как комбинаций символов
# Так же вести себя и с пулом -- прошёл успешно если чистый или нужен коммит, стэш, merge итп

all_git st
all_git pull
