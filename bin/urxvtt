#!/usr/bin/env bash
source ~/.shell/profile

SETS=
case ${1:-$CURR_THEME} in
  lucid|-t) SETS="-sh 100 -fadecolor White -fade 25"; shift ;;
 opaque|-o) SETS="-sh   0 -fadecolor Black -fade 15"; shift ;;
  light|-l) SETS="-sh 170 -fadecolor White -fade 25"; shift ;;
   dark|-d) SETS="-sh  25 -fadecolor Black -fade 15"; shift ;;
         *) SETS="-sh 100 -fadecolor White -fade 25" ;;
esac

urxvt $SETS ${@:+-e "$@"}
