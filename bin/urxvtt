#!/usr/bin/env bash

SETS=
case ${1:-$CURR_THEME} in
 transparent|-t) SETS="-sh 100 -fadecolor White -fade 25" ;;
      opaque|-o) SETS="-sh   0 -fadecolor Black -fade 15" ;;
       light|-l) SETS="-sh 170 -fadecolor White -fade 25" ;;
        dark|-d) SETS="-sh  25 -fadecolor Black -fade 15" ;;
             *) SETS="-sh 100 -fadecolor White -fade 25" ;;
esac

urxvt $SETS
