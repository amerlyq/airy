#!/bin/bash -e
### Set key-value pair for kernel config
shopt -s extglob

cfg=${1:?}
key=${2:?}

if [[ $key =~ = ]]; then
  val=${key##*=}
  key=${key%=*}
else
  shift 2
  val=$*
fi

[[ $key =~ [^A-Za-z0-9_] ]] \
  && { echo "Wrong key chars [$key]" >/dev/tty; exit 1; }

# EXPL: quote value argument for kernel config (if present and non-atomic)
[[ $# -eq 0 || $val == @(\"*\"|[yn0]|[1-9]*([0-9])) ]] || val="\"$val\""

# NEED gawk 4.1.0 (10/05/2013)
exec gawk -i inplace -vo="${key:?}" -vv="$val" '
  BEGIN { p="^#?\\s*?"o"\\y(.*)$" }
  $0 !~ p { print $0 }
  match($0,p,a) { has=1
    if(v!="") { print o"="v }
    else { print "# "o""a[1] }
  }
  ENDFILE { if(!has) {
    if(v!="") { print o"="v }
    else { print "# "o" is not set" }
  }}
' "$cfg"
