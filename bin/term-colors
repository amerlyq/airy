#!/bin/sh
# Color maps in terminal
# 256 term -> RGB
#   http://www.calmar.ws/vim/256-xterm-24bit-rgb-color-chart.html

cd ~/.bin/term-colors.d

case $1 in
    c|cube)     ./cube256.pl        ;;
    g|grid)     ./grid256.sh        ;;
    t|text)     ./textbg16.sh       ;;
    l|line)     ./line256.sh        ;;
    d|dna)      ./dna16.sh          ;;
    r|ribbon)   ./ribbon16.sh       ;;
    i|invaders) ./SpaceInvaders8.sh ;;
*) echo "% { (c)ube, (g)rid, (t)ext, (l)line, (d)na, (r)ibbon, (i)nvaders }"
esac
