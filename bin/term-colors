#!/bin/sh
# Color maps in terminal

cd ~/.bin/term-colors.d

case $1 in
    g|grid)     ./grid256.sh        ;;
    t|text)     ./textbg16.sh       ;;
    l|line)     ./line256.sh        ;;
    d|dna)      ./dna16.sh          ;;
    r|ribbon)   ./ribbon16.sh       ;;
    i|invaders) ./SpaceInvaders8.sh ;;
*) echo "% { (g)rid, (t)ext, (l)line, (d)na, (r)ibbon, (i)nvaders }"
esac
