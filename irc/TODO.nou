  Auth with SASL
     /NETWORK ADD -sasl_mechanism plain -sasl_username myuser -sasl_password mypass freenode
     /SERVER ADD -auto -ssl -ssl_verify -ssl_capath /etc/ssl/certs -network freenode chat.freenode.net 6697
     /SAVE
     !! restart irssi

