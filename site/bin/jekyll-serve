#!/bin/sh -eux
s=$1
d=$(cd "$2" && pwd)
log=${3:-${TMPDIR:-/tmp}/jekyll.log}
cd "$s"

# => Use '--no-watch' to disable auto-regeneration.
# --skip-initial-build
bundle exec jekyll serve --detach --watch \
  --destination "$d" &> "$log"

sed -rn "/^Server detached with pid '([0-9]+)'.*/s//\1/p" "$log"
