#!/bin/bash -eu
# NOTE: reserve word 'agenda' for todo mapped on calendar
set -o pipefail
cd ~/aura
# ATT:NEED: ./.ignore
exec ag --vimgrep \
  -G '.*/.[^/]+\.nou$' "$@" \
  '^\s*!+[0-9]+\s\[_\]\s' \
| $EDITOR - -c 'setl ft=nou bt=nofile|cgetb|%s/^\S\{-}:\s\+//|copen|only'
