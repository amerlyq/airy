#!/bin/bash
# vim: ft=sh
source ~/.bash/functions.d/packages
if [ $? -eq 1 ]; then exit 1; fi
# Vim

LST="$LST vim vim-gtk"
LST="$LST libclang-dev exuberant-ctags python-dev silversearcher-ag"
