apt_noprompt $LST

winetricks dinput

mkdir -p ~/".wine/drive_c/Program Files"
mkdir -p ~/".wine/drive_c/Program Files (x86)"

echo "
    !! Place your Window's programms inside ~/.wine/drive_c/Program Files/ !!
"

