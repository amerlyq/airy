#!/bin/bash
# vim: ft=sh
# Get 159 Mb
source ~/.bash/functions.d/packages
if [ $? -ne 0 ]; then exit 1; fi

LST="$LST wine"
# playonlinux ktouch
# winetricks | only for x86
# mono-complete | for .NET
