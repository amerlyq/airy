#!/bin/bash
# vim: ft=sh
source ~/.bash/functions.d/packages
if [ $? -eq 1 ]; then exit 1; fi
# DEVELOPMENT

LST="$LST git git-gui gitk tig git-core git-doc meld doxygen"
# tig # git cli interactive (instead of gitk) http://jonas.nitro.dk/tig/manual.html

# Those libs also necessary to build x32 under x64 system
LST="$LST cmake build-essential gcc-multilib g++-multilib lib32stdc++6 openjdk-7-jdk openjdk-7-jdk:i386"
LST="$LST make pkg-config" #binutils-gold
# libc6-dbg:i386    # need to prevent valgrind error with strlen -> strnlen
LST="$LST cppcheck valgrind libc6-dbg:i386 gdb"

#LST="$LST rabbit valkyrie"  #GUI#

apt_noprompt $LST
