#!/bin/bash -e
source ~/.shell/func.d/packages

if distro arch; then
    # pkg_inst "base-devel"  # In conflict with multilibs!
    pkg_inst -p 'gcc' gcc-multilib
    pkg_inst -f '/usr/lib32/libstdc++.so' lib32-gcc-libs
    pkg_inst -p 'valgrind' valgrind-multilib
    pkg_inst c2hs clisp   # -pr-lang: haskell, lisp

    # SEE: http://code.jsoftware.com/wiki/Books
    # NEED: installed qt4/qmake to build
    # aur_inst "j8-git"  # J -pr-lang

    # haskell
    pkg_inst -p 'cabal' cabal-install
    if cfgOpt u || [[ ! -d ~/.cabal/packages ]]
    then cabal update; fi
    # cabal-install ghc-mod
    # cabal install hdevtools

    echo "Err: Not enough packages"

elif distro ubuntu; then
    # Those libs also necessary to build x32 under x64 system
    LST="$LST build-essential gcc-multilib g++-multilib lib32stdc++6 "
    LST="$LST make checkinstall pkg-config autoconf automake cmake" #binutils-gold
    #| libc6-dbg:i386 | need to prevent valgrind error with strlen -> strnlen
    LST="$LST valgrind libc6-dbg:i386 gdb doxygen cppcheck"  #rabbit valkyrie  <GUI>
    # LST="$LST google-perftools libgoogle-perftools-dev libgoogle-glog-dev google-mock"
    # Cross-compilers
    # LST="$LST gcc-arm-linux-gnueabi" #Or ...-androideabi
    LST="$LST moreutils"

    pkg_inst $LST
    echo "Err: Not enough packages"
fi
