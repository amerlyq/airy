#!/bin/sh -eu

url=$1
nm=${2:-upstream}
push=${3:-}

if git remote | grep -qxF "$nm"; then
  git remote set-url "$nm" "$url"
else
  git remote add -f -t master -m master "$nm" "$url"
fi

if [ -z "$push" ]; then
  git remote set-url --push "$nm" DISABLE
fi

# printf 'C: git remote: %s\n' "$(git remote get-url origin)"
