#!/bin/bash -e
source ~/.shell/func.d/packages

#| iotop   | Show disk r/w statistics for processes like htop (press 'a')
#| dstat   | Versatile tool for generating system resource statistics
#| jshon   | Bash json parser to use in scripts with i3-msg output # http://kmkeen.com/jshon/
#| shyaml  | Read access to YAML files through command line # https://github.com/0k/shyaml
# ALT:  jq (https://stedolan.github.io/jq/), paired with yaml2json (https://github.com/coolaj86/yaml2json).
#| urlview | Extracting URLs from text files and displaying a menu from which
#|_________|    you may launch a command to view a specific item
#| mlocate | Searching indexed (daily or by 'sudo updatedb') files on arch

# Desktop search: (USE 'whereis' along with which)
#   https://wiki.archlinux.org/index.php/File_system_search

# sift ALT to grep, faster then ag, single independent binary
# https://sift-tool.org/performance

pkg_inst htop iotop dstat jshon  # ALT:(jshon): jq
pkg_inst cscope

if distro arch; then
  # THINK:SEE gtags (GNU Global) -- instead of ctags?
  pkg_inst ctags rsync
  pkg_inst -p 'locate' mlocate
  aur_inst shyaml

elif distro ubuntu; then
  pkg_inst exuberant-ctags
  pkg_inst checkinstall locate
  pkg_inst urlview  # No for arch?
fi
