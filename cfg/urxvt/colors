#ifndef UShading
# ifdef Light
#  define UShading 180
# elif defined(Transparent)
#  define UShading 100
# else
#  define UShading 25
# endif
#endif



! In vim you will receive opaque background. Change if you dont wanna
URxvt*background: S_base03
URxvt*foreground: S_base0
! Fade the text by the given percentage when focus is lost !DarkBlue
URxvt*fading:     20          ! 15 black, 25 white
URxvt*fadeColor:  S_base03
URxvt*shading:    UShading


