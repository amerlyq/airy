#!/bin/bash -e
source ~/.shell/func.d/cfgsetup

### LINKS ###
#link "$PWD/profile" ~/.profile
echo "Err: FIXME"
if distro arch; then
    cfg=/etc/pacman.conf
    ! grep -q '^#Color\s*$' $cfg || sudo sed -ri '/^#(Color)\s*$/s//\1/' $cfg
    link "$PWD/pacaur.conf" ~/.config/pacaur/config
fi

# if distro ubuntu; then:
# update-alternatives : x-session-manager cinnamon-session-cinnamon
if distro ubuntu; then (cd ./ubuntu
    ./xsessionrc.gen

    if cfgOpt u; then
        echo "N: hosts, rc-local, nosudo_reboot"
        ./hosts.gen
        ./rc-local.gen
        ./nosudo_reboot
    fi
); fi
