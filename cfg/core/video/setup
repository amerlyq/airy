#!/bin/bash -e
source ~/.shell/func.d/cfgsetup

if distro arch; then
  case "${CURR_PROF:?}"
  in home|neo)
    if ! id | grep -q bumblebee; then
      sudo gpasswd -a $(whoami) bumblebee
      die "!!! Re-login X session or reboot to update changes in Groups"
    fi
    svc_activate -e bumblebeed
  ;; esac

elif distro ubuntu; then
  echo "Err: no nvidia"
fi
