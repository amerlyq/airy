#!/bin/bash -e
source ~/.shell/func.d/packages


if distro arch; then
    # system drivers
    pkg_inst 'ntfs-3g'
    # sudo fc-cache && sudo mkfontscale && sudo mkfontdir

    # ALT packer (lightweight but less automatable and w/o shell completion)
    # gpg --recv-keys <KEYID> AND then you can sign it:  gpg --lsign-key <KEYID>
    aur_inst 'pacaur'

# http://askubuntu.com/questions/468466/why-this-occurs-error-diskfilter-writes-are-not-supported
else
    pkg_inst 'btrfs-tools'
fi
# elif distro ubuntu; then
