# wget -i list.urls
# ALT: wget -i http://www.ex.ua/filelist/$id.urls --trust-server-names=on --restrict-file-names=nocontrol
# (with this *rc last part can be omended)
user-agent = «Mozilla/7.0»

# ie9 @ w7
# user_agent = Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)

wait = 1
continue = on
background = off
content_disposition = on
limit_rate = 10485760
restrict_file_names = nocontrol


# use the server-provided last modification date, if available
timestamping = on
# do not go up in directory structure when downloading recursively
no_parent = on
# wait only 60 seconds before timing out
timeout = 60
# retry times on fail
tries = 10
# use the last component of a redirection URL for the local file name
# trust_server_names = on
