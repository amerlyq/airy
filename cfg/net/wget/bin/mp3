#!/bin/bash
# USE: khinsider.com
exec wget -O- "$@" \
| sed -rn '/.*href="(https?:\/\/[^"]*\.mp3)".*/s//\1/p' \
| wget -i- -O- \
| sed -rn '/.*href="(https?:\/\/[^"]+\.mp3)">Click here to download.*/s//\1/p' \
| r.wgetf -i-

