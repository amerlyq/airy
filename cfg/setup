#!/bin/bash
cd $(dirname $(readlink -m ${0})) || exit
[[ "${PKG_LIST[@]} " =~ "${PWD##*/} " ]] || exit

case "$1" in
-u|--update) ARGS="$1" ;;
--clean) ARGS="$1" ;;
*) ARGS="" ;;
esac

for dir in "$PWD"/*; do if [[ -d "$dir" && -f "$dir/setup" ]]
then echo ">>> Cfg: $dir <<<"; "$dir/setup" "$ARGS" || exit; fi; done
