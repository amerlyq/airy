#!/bin/bash -e
source ~/.shell/func.d/cfgsetup

echo 'Defaults:'

### AUTO ###
term="$({ has_pr st && echo st; } ||
        { has_pr urxvt && echo urxvt; } || echo xterm)"

(cd "${CURR_DIR_CACHE:?No}/bin"
    link "r.${term:?No}"    ./r.t
    link "r.${term}-float"  ./r.tf
    link "r.notify"         ./r.n
    link "r.qute"           ./r.b
    link "r.elinks"         ./r.bt
    link "r.xmonad"         ./r.wm
)

if distro ubuntu; then
  mkdef x-terminal-emulator $(which $term)
  mkdef www-browser $(which elinks)
  mkdef x-www-browser $(which qutebrowser)
  mkdef x-window-manager $(which i3)
fi
