#!/bin/bash

# --- Often ---
alias la='ls -A'
alias ll='ls -alF'
alias l='ls -CF'
alias l.='ls -d .*'
alias lx="ll -BX"
alias lz="ll -S"

alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
# zsh prev dir: 'cd -', or it's alias '--'
alias h='history'
alias q='exit'

alias du="du -h"
alias duh='du --max-depth=1'
alias mkdir='mkdir -pv'
# mkdcd() { mkdir -p "$@" && cd "$_"; }

