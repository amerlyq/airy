
set $dmenu j4-dmenu-desktop --dmenu="dmenu -f -z -i -fn 'Droid Sans Mono-9:normal' -nb '#333333' -nf '#dedede' -sb '#d64937' -sf '#dedede'"
set $home /home/do

# PulseAudio
exec --no-startup-id pulseaudio --start
for_window [instance="feh"] fullscreen
hide_edge_borders both
popup_during_fullscreen smart
bindsym --release Print exec --no-startup-id aplay -qN ~/.i3/screenshot.wav; exec --no-startup-id scrot
bindsym $mod+minus exec $home/.i3/scripts/gotows.sh
bindsym $mod+Shift+minus exec $home/.i3/scripts/movetows.sh
bindcode $mod+21 exec $home/.i3/scripts/renamews.sh
bindsym $mod+e move scratchpad
# Bar control
bindsym $mod+Shift+b bar hidden_state toggle
bindsym $mod+Shift+m bar mode toggle

# Modes to autohide bar after mode shortcuts
set $defmod mode "default"; bar mode hide; exec sleep 0.1; exec xdotool key --clearmodifiers alt
set $chmod bar mode dock; mode

bindsym $mod+m $chmod "Music control"
mode "Music control" {
        bindsym Shift+u exec --no-startup-id pactl set-sink-volume 0 -- +1%
        bindsym Shift+d exec --no-startup-id pactl set-sink-volume 0 -- -1%

        bindsym u exec --no-startup-id pactl set-sink-volume 0 -- +5%
        bindsym d exec --no-startup-id pactl set-sink-volume 0 -- -5%
        bindsym m exec --no-startup-id pactl set-sink-mute 0 toggle

        bindsym b exec --no-startup-id mocp -r
        bindsym p exec --no-startup-id mocp -G
        bindsym n exec --no-startup-id mocp -f

        bindsym s exec mocp -S && mocp -p
        bindsym k exec mocp -x
        bindsym x exec mocp -x

        bindsym $mod+m $defmod
        bindsym Return $defmod
        bindsym Escape $defmod
        bindsym $mod+Return $defmod
        bindsym $mod+Escape $defmod
    }

# Bar
bar {
	id bot_bar
	mode hide
	hidden_state hide
	modifier $mod
	position bottom
	tray_output none

    status_command i3status --config $home/.i3/i3status.conf
}
