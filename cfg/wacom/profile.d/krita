#!/usr/bin/env bash
#: class="Krita"
SCRIPT_PATH=$(readlink -m ${BASH_SOURCE[0]})
source "${SCRIPT_PATH%/*/*}/funcs-lib" || exit 1

wacom "$WPAD" << EOT
    Button  2  "key shift"
    Button  3  "key ctrl"
    Button  8  "key +Control_L z -Control_L"
    Button  1  "key E"
    Button  9  "key ctrl shift A"
    Button 10  "key ctrl K"
    Button 11  "key +Super_L a -Super_L"  #Def: "key ctrl M"

    # AbsWheelDown    5
    # AbsWheelUp      4
    # ScrollDistance  10
    # TapTime         50
EOT

wacom "$WSTYLUS" << EOT
    RawSample       8               # Decrease the lag between the stylus tip is and the line drawn
    PressureCurve   20 0 10 100     # Firmer: 80 0 80 100
    TabletPCButton  off             # Buttons works even on the air
    Threshold       10
    Mode Absolute
EOT

wacom "$WERASER" << EOT
    RawSample       8               # Smoother
    PressureCurve   10 0 50 100
EOT

wacom "$WTOUCH" << EOT
    #ScrollDistance  18             # a little more sensitive
    #TapTime         220
EOT

wacom "$WCURSOR" << EOT
    #Threshold       27
EOT

