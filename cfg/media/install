#!/bin/bash -e
source ~/.shell/func.d/packages

#| cups-pdf  | virtual pdf printer
#| ffmpeg    | http://ffmpeg.org/download.html#build-linux
#|           | ffmpeg -i video.avi extracted_audio.mp3
#|___________| mplayer -dumpaudio video.avi -dumpfile extracted_audio.mp3

# fbreader
pkg_inst "graphviz imagemagick libmagick++-dev pandoc cups-pdf"
git_inst 'matimatik/fbless'

if distro arch; then
    pkg_inst ffmpeg
elif distro ubuntu; then
    ppa_add 'ppa:mc3man/trusty-media'
    pkg_inst ffmpeg
fi

