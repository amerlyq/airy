#!/bin/bash -e
source ~/.shell/func.d/packages
has_pr X || die
# | pidgin-sipe        | Office Communicator plugin
# | pidgin-plugin-pack | Primarily for convenient history plugin

pkg_inst pidgin

case "$CURR_PROF" in work)
    pkg_inst -a 'pidgin-sipe'
esac

if distro arch; then
    # Currently not fully works
    # https://github.com/EionRobb/skype4pidgin/blob/master/skypeweb/README.md
    # aur_inst -a 'purple-skypeweb-git'
    pkg_inst 'skype'  # multilib only
    echo "Err: broken"
    # pkg_inst 'pidgin-encryption'

elif distro ubuntu; then
    pkg_inst 'pidgin-plugin-pack myspell-ru'
fi


### ON DEMAND ###
# finch   | TUI interface to pidgin
# tcpdump | if necessary to extract paswd
