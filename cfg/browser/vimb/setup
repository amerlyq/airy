#!/bin/bash -e
cd $(dirname $(readlink -m ${0})) && source ~/.shell/func.d/cfgsetup
[[ "$THEME" =~ ^(dark|light)$ ]] || THEME=dark

### LINKS ###
dir=~/.config/vimb
# Skip if you only toggle them
if [[ "$1" != '-t' ]]; then
    linkdir "$dir/" config 'dld-start' theme setup
fi

link "$dir/theme/${THEME}.css" "$dir/style.css"
