[Unit]
Description=Xorg Keyboard Modifiers - %P
Requires=wm.target
After=wm.target
PartOf=main.target
Before=main.target

[Service]
Type=forking
ExecStartPre=/bin/sh -c 'pkill -x xcape; true'
ExecStart=/usr/bin/xcape -t 250 -e "
    ISO_Level3_Shift=Super_R;
    Overlay1_Enable=Multi_key"
Restart=always
RestartSec=1

[Install]
WantedBy=main.target
