[Unit]
Description=Xorg Keyboard Modifiers - %P
Requires=wm.target
After=wm.target
PartOf=main.target
Before=main.target

[Service]
ExecStartPre=/bin/sh -c 'pkill -x xcape; true'
ExecStart=/bin/sh -c '/usr/bin/xcape -d -t 250 -e "\
    ISO_Level3_Shift=Super_R;\
    Overlay1_Enable=Multi_key\
    " >/dev/null'
ExecStop=/usr/bin/pkill -x xcape
Restart=always
RestartSec=1

[Install]
WantedBy=main.target
