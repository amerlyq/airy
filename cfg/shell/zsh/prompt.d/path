function prompt_pwd {
  local w=$1 p=${PWD/#$HOME/\~}
  ## Keep first char '/' or '~' in path
  if [[ $p != (#m)[/~] ]]; then
    # CHECK: '/' already filtered by outer match
    [[ $p == / ]] || p=${${p%/}//\%/%%}
    (($w && $#p >= $w )) && p=${${(@j:/:M)${(@s:/:)p}##.#?}:h}/${p:t}
    (($w && $#p >= $w )) && p="%$w>…>…/${p:t}%<<"
  fi
  unset MATCH
  print -P "$p"  # NEED: to collapse path segments
}
