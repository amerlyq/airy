# vim: ft=sh
# SEE
#   http://hgbook.red-bean.com/read/customizing-the-output-of-mercurial.html
# Analoguos to git, but with <h..> prefix

alias hgst='hg status'
alias hgdf='hg diff'
alias hgds='hg diff --ignore-space-change'
alias hgdp='hgdf -r .~1 -r .'

# hg log --template "{node};{date|shortdate};{branch};{author};{join(splitlines(desc), ' ')};{diffstat};files: {join(files, ', ')}\n"
alias hglg='hg log --graph --limit 50 --template "\t{desc|strip|firstline}\n\t\t{date|shortdate} [{author|user}] :{node|short} "'
alias hglb='hg bookmarks'
alias hglbr='hg branches'
alias hglh='hg heads'

alias hga='hg add'
alias hgcm='hg commit -m'
alias hgca='hg commit --amend'

# Edit
alias hgpop='hg strip --keep -r .'
alias hgrbk='hg rebase --keepbranches -d '
alias hgrev='hg revert --no-backup'

alias hgb='hg branch'
alias hgco='hg checkout'
# alias hged='hg diffmerge'
# pull and update
# alias hgs='hg shelve'
alias hgl='hg pull -u'
# alias hglr='hg pull --rebase'
# alias hgsh='hg push'
alias hgi='hg incoming'
alias hgo='hg outgoing'

# this is the 'git commit --amend' equivalent
# alias hgca='hg qimport -r tip ; hg qrefresh -e ; hg qfinish tip'
# list unresolved files (since hg does not list unmerged files in the status command)
# alias hgun='hg resolve --list'
