# vim:ft=sh

alias S.u='sudo systemctl'  # unit
alias S.r='S.u start'
alias S.s='S.u status'
alias S.t='S.u stop'

alias s.u='systemctl --user'

alias s.d='s.u disable'
alias s.e='s.u enable'

alias s.cc='systemd-analyze --user critical-chain'
# USE: (--order|--require)
alias s.cd='dot -Tx11 <(systemd-analyze --user dot)'  # Search cycles
alias s.cs='systemd-analyze --user time'    # summary
alias s.ct='systemd-analyze --user blame'   # sort by time
alias s.cv='systemd-analyze --user verify'  # check svc list recursively

alias s.a='s.u --all'
alias s.f='s.u --failed'
alias s.g='s.u list-dependencies'
alias s.i='s.u list-unit-files'
alias s.j='s.u list-jobs'
alias s.l='s.u list-units'

alias s.r='s.u start'
alias s.s='s.u status'
alias s.t='s.u stop'

alias s.v='s.u show-environment'
alias s.vi='s.u import-environment'
alias s.vs='s.u set-environment'

alias s.R='s.r main.target'
alias s.B='journalctl -b'
alias s.X='loginctl terminate-user $USER'
