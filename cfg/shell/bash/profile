# vim: ft=sh
# WARNING: seems like ZSH on Mint not sources this file!
#          but it's still necessary on ubuntu to export PATH to i3wm
#   Read more: http://unix.stackexchange.com/questions/88201/whats-the-best-distro-shell-agnostic-way-to-set-environment-variables


# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

envfile="$HOME/.gnupg/gpg-agent.env"
if [[ -e "$envfile" ]] && kill -0 $(grep GPG_AGENT_INFO "$envfile" | cut -d: -f 2) 2>/dev/null
then eval "$(cat "$envfile")"
else eval "$(gpg-agent --daemon --enable-ssh-support --write-env-file "$envfile")"
fi
export GPG_AGENT_INFO  # the env file does not contain the export statement
export SSH_AUTH_SOCK   # enable gpg-agent for ssh

# Only if running bash
if [ -n "$BASH_VERSION" ]; then
    # set PATH so it includes user's private bin if it exists
    for path in ~/.cache/airy/bin ~/.bin
    do if [[ -d "$path" ]]; then
        grep -q "$path" <<< "$PATH" || PATH="$path:$PATH"
    fi; done

    if [[ ! -d "$TMPDIR" ]]; then
        export TMPDIR="/tmp/$LOGNAME"
        mkdir -p -m 700 "$TMPDIR"
    fi

    # include .bashrc if it exists
    if [[ -f "$HOME/.bashrc" ]]; then
        source "$HOME/.bashrc"
    fi
fi

## Export variable for systemd/user units
# systemctl --user import-environment PATH
# xargs systemctl --user set-environment < /path/to/file.conf
# drop-in config file in /etc/systemd/system/user@.service.d/
