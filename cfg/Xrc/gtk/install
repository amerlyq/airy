#!/bin/bash -e
source ~/.shell/func.d/packages
has_pr X || die

pkg_inst -a "gtk2 gtk3"

# mate-themes numix-themes
aur_inst -a "vertex-themes zukitwo-themes ceti-2-themes"

# fonts
if grep -q '^\[infinality-bundle\]' /etc/pacman.conf; then
    pkg_inst -a infinality-bundle
fi
pkg_inst 'ttf-freefont ttf-droid ttf-dejavu otf-ipafont'

# Install manually:
# aur_inst -a 'freetype2-ubuntu fontconfig-ubuntu cairo-ubuntu'
