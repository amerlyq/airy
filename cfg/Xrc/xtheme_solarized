#  define  S_base3   #fdf6e3
# endif
#endif

#ifndef UShading
# ifdef Light
#  define UShading 180
# elif defined(Transparent)
#  define UShading 100
# else
#  define UShading 25
# endif
#endif

! 15 black, 25 white
URxvt*shading:    UShading
URxvt*fading:     20
URxvt*fadeColor:  S_base03

! To only apply colors to your terminal, for example, prefix
! the color assignment statement with its name. Example:
!URxvt*background: S_base03

! In vim you will receive opaque background. Change if you dont wanna
*background: S_base03
*foreground: S_base0

! *fading: 40
*fadeColor: S_base03
*cursorColor: S_base2
*cursorTextColor: S_base02
*pointerColorBackground: S_base01
*pointerColorForeground: S_base1


