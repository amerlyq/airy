# vim: ft=sh

# X settings
xrandr --size 1 &

# xscreensaver -no-splash &
xsetroot -cursor_name left_ptr &
xsetroot -solid "#333333"


# http://fluxbox.sourceforge.net/docbook/en/html/app-setup.html
# Disable DPMS turning off the screen
xset -dpms
xset s off
# Disable bell
xset -b

# Coredumps
# ulimit -c unlimited


