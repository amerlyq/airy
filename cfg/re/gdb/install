#!/bin/bash -e
source ~/.shell/func.d/packages

pkg_inst 'gdb'

if distro arch; then
    pkg_inst -f '/usr/lib/python3.5/site-packages/six.py' 'python2-six'
    aur_inst -f '/usr/share/peda/peda.py' peda-git
    # ALT dual compatible: https://github.com/zachriggle/peda

elif distro ubuntu; then
    git_inst ""
fi

# Enable peda:
# echo 'source /usr/share/peda/peda.py' >> .gdbinit
