#!/bin/bash -eu
# Save mail from stdin to file
# NEED: set pipe_decode=yes
#   => controls what happens to headers and mime parts when you save

d=$1
f=${2:-mail}
msg=$(cat)

mkdir -p "$d"
<<<"$msg" cat > "$d/$f".eml

