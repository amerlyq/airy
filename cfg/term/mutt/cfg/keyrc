bind attach  i  display-toggle-weed
bind attach  l  view-mailcap
bind attach  h  exit
bind attach  g  first-entry
bind attach  G  last-entry
bind attach <Return>  view-mailcap
bind attach <Right>   view-attach
bind attach <Left>    exit

