partial alphanumeric_keys
xkb_symbols "hummer" {
    key <AD02> { overlay1=<KP1> };  // W
    key <AC02> { overlay1=<KP2> };  // S
    key <AC01> { overlay1=<KP3> };  // A
    key <AC03> { overlay1=<KP4> };  // D

    key <AC07> { overlay1=<KP5> };  // J
    key <AC08> { overlay1=<KP6> };  // K
    key <AC09> { overlay1=<KP7> };  // L
    key <AD08> { overlay1=<KP8> };  // I

    key <AC04> { overlay1=<KP9> };  // F

    key <SPCE> { overlay1=<KPAD> };
    key <LFSH> { overlay1=<RTSH> };
    key <TAB>  { overlay1=<KPMU> };
    key <AB03> { overlay1=<KPSU> };
};


