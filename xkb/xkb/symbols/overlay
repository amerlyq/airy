// vim: ft=cpp

default partial alphanumeric_keys
xkb_symbols "vim" {

    key <AC06> { overlay1=<LEFT> };
    key <AC07> { overlay1=<DOWN> };
    key <AC08> { overlay1=<UP>   };
    key <AC09> { overlay1=<RGHT> };

    key <AD09> { overlay1=<PGUP> };
    key <AD10> { overlay1=<PGUP> };
    key <AB06> { overlay1=<PGDN> };
    key <AC01> { overlay1=<HOME> };
    key <AD03> { overlay1=<END> };

    key <AB07> { overlay1=<RTRN> };
    // key <SPCE> { overlay1=<HYPR> };
};


