!! Turn CapsLock into Control, and LeftControl into Hyper for i3

!! disable CapsLock completely
clear      lock
!clear   control
!clear     shift
!clear      mod1
!clear      mod2
clear      mod3
clear      mod4
!clear      mod5

!! 66-CapsLock, 64-Control, 37-Alt
keycode      66 = Control_L
keycode      37 = Alt_L
keycode      64 = Hyper_L

!!add     control = Control_L Control_R
!add        mod1 = Alt_L Alt_R Meta_L
!add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
!add        mod5 = Mode_switch ISO_Level3_Shift
