! vim: ft=xdefaults
! SEE: http://fluxbox-wiki.org/category/howtos/en/Xdefaults_setup.html
xmessage*international: true

!! ATTENTION:(infinality):NEED: 96 -- dont define DPI
!! No need to specify dpi if correct size in mm (physical screen)
!!   from xdpyinfo (90-monitor.conf)
Xft*dpi : DPI

!! Fonts for Cairo and libXft
Xft*antialias : true
Xft*autohint  : false
Xft*hinting   : true
! hintnone, hintslight, hintmedium, hintfull
Xft*hintstyle : hintslight
! lcdnone, lcddefault, lcdlight, lcdlegacy
Xft*lcdfilter : lcddefault
! unknown, rgb, bgr, vrgb, vbgr, none
Xft*rgba      : rgb
