# vim:ft=zsh

## Targeted jumps
# ALT:(shorthands):
#   "..f" aka relative jump
#   ",f" aka augmented jump
# function cd.f { builtin cd $1:h; }
# OR:(lambda): alias cd.f='(){ builtin cd $1:h; }'
function cd.f { builtin cd "${1%/*}"; }

alias cd.g='cd $(git rev-parse --show-toplevel)'
alias cd.r='cd $(git rev-parse --show-superproject-working-tree --show-toplevel | head -1)'
