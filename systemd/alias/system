# vim:ft=sh
alias S.u='sudo systemctl'  # unit

alias S.d='S.u disable'
alias S.e='S.u enable'
alias S.E='S.u enable --now'

alias S.rr='S.u restart'
alias S.r='S.u start'
alias S.s='systemctl status'
alias S.f='S.u --failed'
alias S.t='S.u stop'

alias S.ls='systemctl --all --type=service' # list services
alias S.lsa='systemctl --all'               # show all units (w/ inactive and following)
alias S.lt='systemctl list-timers --all'
alias S.l='journalctl -u'
alias S.b='journalctl -b -u'
alias S.L='journalctl -f -o cat -u'
