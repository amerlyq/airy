#     && [[ $delargs ]]; then xrandr ${delargs:?}; fi
#   # xrandr --delmonitor DP-1~1 --delmonitor DP-1~2
#   sleep 1
#   refresh=1
# fi
#
# ## NOTE: split the ext screen in my usual ratio
