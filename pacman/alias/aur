# vim:ft=sh
# HELP: $ pikaur -Sh [-Qh -Ph -Gh]

alias aur='sudo pacman --config /etc/pacman.d/aur.conf'
alias aury='aur -Sy'

alias aure='pikaur --sync --edit --rebuild --confirm'
alias auri='pikaur --sync --noedit --nodiff'
alias aurI='pikaur --sync --rebuild --noconfirm'

alias aurs='auri --search'
alias aurS='aurs --aur'

alias aurq='pikaur --query --info'
alias aurqq='aurq --info'
alias aurQ='auri --info'
alias aurQQ='aurQ --info'

alias auru='pikaur --query --upgrades'

alias aurx='pikaur --remove --recursive'
alias aurX='aurx --unneeded --cascade'
