#!/bin/bash -eu
source ~/.shell/func.d/packages

pkg_inst weechat
pkg_inst python2-feedparser  # for rss

# MOVE: create "aspell" *mod*, add it as "deps:"
pkg_inst aspell aspell-en aspell-ru aspell-uk

# [_] FIXME: remove or override on "-U" to imitate upgrade
