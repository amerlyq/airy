# vim:ft=neomuttrc

## Switch folders
macro index,browser  ,f  "<change-folder>=inf<enter>"           "Go to =inf (information)"
macro index,browser  ,g  "<change-folder>=log<enter>"           "Go to =log (lots-of-garbage)"
macro index,browser  ,h  "<change-folder>=history<enter>"       "Go to =history (conversations)"
macro index,browser  ,i  "<change-folder>!<enter>"              "Go to =INBOX (welcome screen)"
macro index,browser  ,j  "<change-folder>=log.jira<enter>"      "Go to JIRA issues notifications"
macro index,browser  ,l  "<change-folder>^<enter>"              "Go to <last>"
macro index,browser  ,m  "<change-folder>=my<enter>"            "Go to =my (my very personal)"
macro index,browser  ,n  "<change-folder>=ntf<enter>"           "Go to =ntf (notifications)"
macro index,browser  ,o  "<change-folder>=org<enter>"           "Go to =org (organizational)"
macro index,browser  ,r  "<change-folder>=log.review<enter>"    "Go to PR review notifications"
macro index,browser  ,s  "<change-folder>$record<enter>"        "Go to =Sent (SEE: set record = ...)"
macro index,browser  ,t  "<change-folder>=todo<enter>"          "Go to =todo (pending actions)"
macro index,browser  ,u  "<change-folder>=use<enter>"           "Go to =use (anything personally useful)"
macro index,browser  ,w  "<change-folder>=work<enter>"          "Go to =work (pending actions)"
